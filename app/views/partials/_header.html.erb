<!DOCTYPE html>
<html>
  <h1><%= link_to "Welcome to Mister Pizza!", root_path %></h1>
  <% if current_user %>
    <%= link_to "Log Out", session_path, method: :delete %>
  <% else %>
    <%= link_to "Log In", new_session_path %>
  <% end %>
  <p>
    <% @categories.each do |category| %>
      <%= link_to category.name, category_path(category) %>
    <% end %>
  </p>
  <p>
    <% if session[:cart] %>
      Cart: <%= session[:cart] %>
      <%= link_to "Items in Cart:", cart_items_path %>
      <%= session[:cart].values.reduce(0, :+) %>
    <% else %>
      Items in Cart: 0
    <% end %>
  </p>
</html>

